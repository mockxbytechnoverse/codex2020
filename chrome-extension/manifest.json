{
    "name": "BrowserTools MCP",
    "version": "1.2.0",
    "description": "MCP tool for AI code editors to capture data from a browser such as console logs, network requests, screenshots and more",
    "manifest_version": 3,
    "devtools_page": "devtools.html",
    "permissions": [
      "activeTab",
      "debugger",
      "storage",
      "tabs",
      "tabCapture",
      "desktopCapture",
      "windows",
      "notifications",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
        "action": {
        "default_title": "VizualAI Browser Tools - Screen Recording & Developer Tools"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js"],
        "run_at": "document_start"
      }
    ],
        "web_accessible_resources": [
        {
            "resources": ["laser-pointer.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
